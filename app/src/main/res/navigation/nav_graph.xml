<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movie_feed">


    <fragment
        android:id="@+id/movie_feed"
        android:name="com.moaimar.movie_2022.presentation.MovieFeedFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movie_feed">
        <action
            android:id="@+id/action_movie_feed_to_movie_detail"
            app:destination="@+id/movie_detail"/>
    </fragment>

    <fragment
        android:id="@+id/movie_detail"
        android:name="com.moaimar.movie_2022.presentation.MovieDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>
</navigation>